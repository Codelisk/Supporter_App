<common:BasePage
    x:Class="Supporter_Uno.Presentation.Chats.Settings.ChatSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:Supporter_Uno.Common"
    xmlns:local="using:Supporter_Uno.Presentation.Chats.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uen="using:Uno.Extensions.Navigation.UI"
    mc:Ignorable="d" xmlns:utu="using:Uno.Toolkit.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button uen:Navigation.Request="-" Content="Back"/>
        <TextBox PlaceholderText="Frage" Grid.Row="1"/>
        <TextBox PlaceholderText="Anstwort" Grid.Row="2"/>
    </Grid>
</common:BasePage>
